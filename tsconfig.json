{
  "include": ["client/src/**/*", "shared/**/*", "vite.config.ts"],
  "exclude": ["node_modules", "dist", "server"],
  "compilerOptions": {
    "noEmit": true,
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "strict": true,
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"]
    }
  }
}